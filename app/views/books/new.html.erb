<%= form_for @book do |f| %>
	<% if @book.errors.any?%>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<%end%>
		</ul>
	<%end%>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :cover %>
	<%= f.file_field :cover %>

	<%= f.submit 'Create' %>
<%end%>